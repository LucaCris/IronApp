<Window x:Class="IronApp.BarCodeReader"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IronApp"
        mc:Ignorable="d"
        WindowStartupLocation="Manual"
        Title="BarCodeReader" Height="450" Width="200">
  <StackPanel Orientation="Vertical">
    <TextBlock Text="Users"/>
    <ListView Name="CLCtrl" Height="200" SelectionMode="Single" MouseDoubleClick="CLCtrl_MouseDoubleClick"/>
    <TextBlock Text="Items"/>
    <ListView Name="INCtrl" Height="200" SelectionMode="Single" MouseDoubleClick="INCtrl_MouseDoubleClick"/>
  </StackPanel>
</Window>
